-- ┌────────────────────────────────────────────────────────────┐
-- │ Fullbright (toggle)                                        │
-- └────────────────────────────────────────────────────────────┘
local FullbrightEnabled = false
local Lighting = game:GetService("Lighting")

MiscTab:CreateToggle({
    Name = "Fullbright (Max Brightness)",
    CurrentValue = false,
    Flag = "Misc_Fullbright",
    Callback = function(Value)
        FullbrightEnabled = Value
        if Value then
            Lighting.Brightness = 2
            Lighting.GlobalShadows = false
            Lighting.FogEnd = 9e9
            Lighting.Ambient = Color3.fromRGB(255, 255, 255)
            Rayfield:Notify({Title = "Fullbright", Content = "Enabled – everything lit up", Duration = 4, Image = "sun"})
        else
            -- Reset to defaults (adjust if game has custom lighting)
            Lighting.Brightness = 1
            Lighting.GlobalShadows = true
            Lighting.FogEnd = 100000
            Lighting.Ambient = Color3.fromRGB(128, 128, 128)
            Rayfield:Notify({Title = "Fullbright", Content = "Disabled", Duration = 3, Image = "moon"})
        end
    end
})

-- ┌────────────────────────────────────────────────────────────┐
-- │ Destroy UI (close hub completely)                          │
-- └────────────────────────────────────────────────────────────┘
MiscTab:CreateButton({
    Name = "Destroy / Close Hub",
    Callback = function()
        Rayfield:Notify({
            Title = "Closing",
            Content = "HM HUB shutting down...",
            Duration = 2.5,
            Image = "x-circle"
        })
        task.wait(0.8)
        Rayfield:Destroy()
    end
})

-- Credits / info label at bottom
MiscTab:CreateLabel("HM HUB • by hollowBros • 2026")
MiscTab:CreateLabel("Misc tools & quality-of-life features")

local GodmodeEnabled = false

MiscTab:CreateToggle({
    Name = "Godmode (Regen Health)",
    CurrentValue = false,
    Flag = "Misc_Godmode",
    Callback = function(Value)
        GodmodeEnabled = Value
        if Value then
            spawn(function()
                while GodmodeEnabled do
                    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
                    if hum then
                        hum.Health = hum.MaxHealth
                    end
                    task.wait(0.3)
                end
            end)
            Rayfield:Notify({Title = "Godmode", Content = "Enabled", Duration = 3, Image = "shield"})
        else
            Rayfield:Notify({Title = "Godmode", Content = "Disabled", Duration = 3, Image = "shield-off"})
        end
    end
})
