local Tab = Window:CreateTab("Steal Friends", 4483362458) -- Title, Image

-- ──────────────────────────────────────────────────────────────
-- Auto Steal (Proximity Prompts) - Walk Close + TP Steal
-- ──────────────────────────────────────────────────────────────

local FriendsFolder = workspace:WaitForChild("Live", 10):WaitForChild("Friends", 5)
local player = game.Players.LocalPlayer

-- Config
local HOLD_BUFFER     = 0.28
local CHECK_INTERVAL  = 0.16
local DISTANCE_EXTRA  = 3.2
local TP_OFFSET       = CFrame.new(0, 0, -2.2)

getgenv().AutoStealOn = false

-- ─── Get all StealPrompts ────────────────────────────────────────
local function GetAllPrompts()
    local prompts = {}
    for _, friend in pairs(FriendsFolder:GetChildren()) do
        local root = friend:FindFirstChild("RootPart")
        if root then
            local prompt = root:FindFirstChild("StealPrompt")
            if prompt and prompt:IsA("ProximityPrompt") then
                table.insert(prompts, {
                    Prompt    = prompt,
                    RootPart  = root,
                    FriendName = friend.Name,
                    MaxDist   = prompt.MaxActivationDistance or 12
                })
            end
        end
    end
    print("AutoSteal → Found " .. #prompts .. " StealPrompts")
    return prompts
end

local allPrompts = GetAllPrompts()

-- ─── Attempt to steal one prompt ─────────────────────────────────
local function AttemptSteal(entry, force)
    local char = player.Character
    if not char then return false end

    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return false end

    local prompt = entry.Prompt
    if not prompt or not prompt:IsDescendantOf(workspace) or not prompt.Enabled then
        return false
    end

    if not force then
        local dist = (hrp.Position - entry.RootPart.Position).Magnitude
        if dist > entry.MaxDist + DISTANCE_EXTRA then
            return false
        end
    end

    print("Stealing → " .. entry.FriendName .. " (force: " .. tostring(force) .. ")")

    local hold = prompt.HoldDuration or 0
    if hold > 0 then
        prompt:InputHoldBegin()
        task.wait(hold + HOLD_BUFFER)
        prompt:InputHoldEnd()
    end

    task.wait(0.07)
    fireproximityprompt(prompt)
    task.wait(0.06)
    fireproximityprompt(prompt, 0)
    task.wait(0.06)
    fireproximityprompt(prompt, 1)
    task.wait(0.07)
    fireproximityprompt(prompt, 0, true)
    task.wait(0.05)
    fireproximityprompt(prompt)

    return true
end

-- ─── Main scanning loop ───────────────────────────────────────────
spawn(function()
    while true do
        task.wait(CHECK_INTERVAL)

        if not getgenv().AutoStealOn then
            continue
        end

        local stolen = 0
        for _, entry in ipairs(allPrompts) do
            if AttemptSteal(entry, false) then
                stolen = stolen + 1
            end
        end

        if stolen > 0 then
            print("Stole from " .. stolen .. " friends this cycle")
        end
    end
end)

-- ─── UI Controls ─────────────────────────────────────────────────
Tab:CreateToggle({
    Name = "Auto Steal (Walk Close Only)",
    CurrentValue = false,
    Flag = "AutoStealWalkToggle",
    Callback = function(enabled)
        getgenv().AutoStealOn = enabled
        Rayfield:Notify({
            Title = "Auto Steal",
            Content = enabled and "Enabled – walk near friends!" or "Disabled",
            Duration = 3.5,
            Image = enabled and "play" or "pause"
        })
    end
})

Tab:CreateButton({
    Name = "Refresh Prompt List",
    Callback = function()
        allPrompts = GetAllPrompts()
        Rayfield:Notify({
            Title = "Prompt List",
            Content = "Refreshed – found " .. #allPrompts .. " prompts",
            Duration = 4,
            Image = "refresh-cw"
        })
    end
})

-- ─── Dropdown: Teleport + Steal + Return ─────────────────────────
local options = {"Select Friend"}
for _, obj in pairs(FriendsFolder:GetChildren()) do
    if obj:IsA("BasePart") or (obj:IsA("Model") and obj.PrimaryPart) then
        table.insert(options, obj.Name)
    end
end
table.sort(options)

Tab:CreateDropdown({
    Name = "TP → Steal Friend → Return",
    Options = options,
    CurrentOption = "Select Friend",
    Flag = "StealFriendDropdown",
    Callback = function(Value)
        -- Safety handling for possible table input
        local selected = (type(Value) == "table" and Value[1]) or Value
        if type(selected) ~= "string" then selected = "Select Friend" end

        if selected == "Select Friend" or selected == "" then return end

        local targetObj = FriendsFolder:FindFirstChild(selected)
        if not targetObj then
            Rayfield:Notify({
                Title = "Error",
                Content = "Friend not found: " .. selected,
                Duration = 4,
                Image = "alert-triangle"
            })
            return
        end

        local targetCFrame
        if targetObj:IsA("BasePart") then
            targetCFrame = targetObj.CFrame
        elseif targetObj:IsA("Model") and targetObj.PrimaryPart then
            targetCFrame = targetObj.PrimaryPart.CFrame
        end

        if not targetCFrame then return end

        local char = player.Character
        if not char or not char.Parent then
            char = player.CharacterAdded:Wait()
        end
        local root = char:WaitForChild("HumanoidRootPart", 5)

        local originalCFrame = root.CFrame

        root.CFrame = targetCFrame * TP_OFFSET
        task.wait(0.18)

        local targetEntry
        for _, entry in ipairs(allPrompts) do
            if entry.FriendName == selected then
                targetEntry = entry
                break
            end
        end

        local success = false
        if targetEntry then
            success = AttemptSteal(targetEntry, true)
            task.wait(0.9)
        else
            print("No StealPrompt for: " .. selected)
        end

        root.CFrame = originalCFrame

        Rayfield:Notify({
            Title = "Steal Action",
            Content = success and ("Stole from " .. selected .. " → returned") or ("Failed to steal from " .. selected),
            Duration = 5,
            Image = success and "check-circle" or "alert-triangle"
        })
    end
})

print("Auto Steal module loaded")

-- ──────────────────────────────────────────────────────────────
-- Misc Tab – Enhanced 2026 Edition
-- ──────────────────────────────────────────────────────────────

local MiscTab = Window:CreateTab("Misc", "settings")

-- ┌────────────────────────────────────────────────────────────┐
-- │ NoClip (already have – keeping for completeness)           │
-- └────────────────────────────────────────────────────────────┘
local NoClipEnabled = false

game:GetService("RunService").Stepped:Connect(function()
    if not NoClipEnabled then return end
    local char = player.Character
    if char then
        for _, part in pairs(char:GetDescendants()) do
            if part:IsA("BasePart") or part:IsA("MeshPart") then
                part.CanCollide = false
            end
        end
    end
end)

player.CharacterAdded:Connect(function(char)
    if NoClipEnabled then
        task.wait(0.4)
        for _, part in pairs(char:GetDescendants()) do
            if part:IsA("BasePart") or part:IsA("MeshPart") then
                part.CanCollide = false
            end
        end
    end
end)

MiscTab:CreateToggle({
    Name = "NoClip (Walk Through Walls)",
    CurrentValue = false,
    Flag = "Misc_NoClip",
    Callback = function(Value)
        NoClipEnabled = Value
        Rayfield:Notify({
            Title = "NoClip",
            Content = Value and "Enabled" or "Disabled",
            Duration = 3,
            Image = Value and "ghost" or "ban"
        })
    end
})

-- ┌────────────────────────────────────────────────────────────┐
-- │ Anti-AFK (improved version)                                │
-- └────────────────────────────────────────────────────────────┘
local AntiAFKEnabled = false
local AntiAFKConn

MiscTab:CreateToggle({
    Name = "Anti-AFK (Stay Online)",
    CurrentValue = false,
    Flag = "Misc_AntiAFK",
    Callback = function(Value)
        AntiAFKEnabled = Value
        if Value then
            AntiAFKConn = game:GetService("RunService").Heartbeat:Connect(function()
                if not AntiAFKEnabled then return end
                if tick() % 240 < 0.2 then  -- ~every 4 minutes
                    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
                    if hum then
                        hum.Jump = true
                    end
                end
            end)
            Rayfield:Notify({Title = "Anti-AFK", Content = "Enabled – auto jump every ~4 min", Duration = 4, Image = "shield"})
        else
            if AntiAFKConn then AntiAFKConn:Disconnect() end
            Rayfield:Notify({Title = "Anti-AFK", Content = "Disabled", Duration = 3, Image = "power-off"})
        end
    end
})

-- ┌────────────────────────────────────────────────────────────┐
-- │ Infinite Jump (toggleable)                                 │
-- └────────────────────────────────────────────────────────────┘
local InfiniteJumpEnabled = false
local InfJumpConn

MiscTab:CreateToggle({
    Name = "Infinite Jump",
    CurrentValue = false,
    Flag = "Misc_InfJump",
    Callback = function(Value)
        InfiniteJumpEnabled = Value
        if Value then
            InfJumpConn = game:GetService("UserInputService").JumpRequest:Connect(function()
                if InfiniteJumpEnabled then
                    local hum = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
                    if hum then
                        hum:ChangeState("Jumping")
                    end
                end
            end)
            Rayfield:Notify({Title = "Infinite Jump", Content = "Enabled – press space to fly up", Duration = 4, Image = "chevrons-up"})
        else
            if InfJumpConn then InfJumpConn:Disconnect() end
            Rayfield:Notify({Title = "Infinite Jump", Content = "Disabled", Duration = 3, Image = "chevron-down"})
        end
    end
})

