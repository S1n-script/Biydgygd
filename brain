local Tab = Window:CreateTab("Auto Quest", 4483362458) -- Title, Image

-- === COMPLETE NOMEEK MOB FARMER (Rayfield) - IMPROVED TP RELIABILITY ===
-- Paste AFTER Rayfield load + Window/Tab creation

local nomekFolder = workspace:WaitForChild("MobSpawns"):WaitForChild("Nomek")

-- State
local autoFarmEnabled = false
local farmDelay = 4
local currentTargetBaseName = nil
local StatusLabel = nil  -- We'll create this for feedback

-- Get base names (clean, no _1 etc.)
local function getBaseNames()
    local baseNamesSet = {}
    for _, child in nomekFolder:GetChildren() do
        local baseName = child.Name:gsub("_%d+$", "")
        if baseName ~= "" then
            baseNamesSet[baseName] = true
        end
    end
    local options = {}
    for name in pairs(baseNamesSet) do table.insert(options, name) end
    table.sort(options)
    if #options == 0 then table.insert(options, "No spawns found") end
    return options
end

-- Get best CFrame from target (Part or Model)
local function getMobCFrame(target)
    if target:IsA("Model") then
        if target.PrimaryPart then return target.PrimaryPart.CFrame end
        if target:FindFirstChild("HumanoidRootPart") then return target.HumanoidRootPart.CFrame end
        return target:GetPivot()  -- Modern fallback
    elseif target:IsA("BasePart") then
        return target.CFrame
    end
    return nil
end

-- Reliable teleport function
local function teleportToMob(baseName)
    if not baseName or baseName == "No spawns found" then return false end
    
    local target = nil
    for _, child in nomekFolder:GetChildren() do
        if child.Name:match("^" .. baseName .. "(_%d+)?$") then
            target = child
            break
        end
    end
    if not target then return false end
    
    local mobCFrame = getMobCFrame(target)
    if not mobCFrame then
        warn("No valid CFrame for target:", target.Name)
        return false
    end
    
    local player = game.Players.LocalPlayer
    local char = player.Character
    if not char then return false end
    
    task.wait(0.1)  -- Tiny wait helps in some games
    
    local root = char:FindFirstChild("HumanoidRootPart")
    if not root then
        warn("No HumanoidRootPart in character")
        return false
    end
    
    -- Preferred: PivotTo (sets whole model, more reliable)
    local success, err = pcall(function()
        char:PivotTo(mobCFrame * CFrame.new(0, 5, -3))  -- In front + above
    end)
    
    if not success then
        -- Fallback: old MoveTo or direct root set
        warn("PivotTo failed:", err)
        if root then
            root.CFrame = mobCFrame * CFrame.new(0, 5, -3)
        else
            char:MoveTo(mobCFrame.Position + Vector3.new(0, 5, -3))
        end
    end
    
    print("Attempted TP to:", target.Name, "at", mobCFrame.Position)
    if StatusLabel then
        StatusLabel:Set("Last TP: " .. target.Name .. " | OK")
    end
    return true
end

-- Farm loop (simple, safe)
local farmThread
local function startFarmLoop()
    if farmThread then task.cancel(farmThread) end
    farmThread = task.spawn(function()
        while autoFarmEnabled do
            if currentTargetBaseName and game.Players.LocalPlayer.Character then
                local success = teleportToMob(currentTargetBaseName)
                if not success and StatusLabel then
                    StatusLabel:Set("TP Failed - Check console")
                end
            end
            task.wait(farmDelay)
        end
    end)
end

-- Respawn handler
game.Players.LocalPlayer.CharacterAdded:Connect(function()
    task.wait(4)  -- Wait longer for full spawn
    if autoFarmEnabled and currentTargetBaseName then
        teleportToMob(currentTargetBaseName)
    end
end)

-- === UI ===

-- Status label for feedback
StatusLabel = Tab:CreateLabel("Status: Waiting...")

-- Dropdown
local Dropdown = Tab:CreateDropdown({
    Name = "Select Nomek Mob Type",
    Options = getBaseNames(),
    CurrentOption = {},
    MultipleOptions = false,
    Flag = "SelectedNomekMobType",
    Callback = function(Option)
        currentTargetBaseName = Option[1]  -- string
        if currentTargetBaseName then
            print("Target:", currentTargetBaseName)
            if StatusLabel then StatusLabel:Set("Selected: " .. currentTargetBaseName) end
        end
    end,
})

-- Toggle (your syntax is correct)
local AutoFarmToggle = Tab:CreateToggle({
    Name = "Auto-Farm / TP Loop",
    CurrentValue = false,
    Flag = "AutoFarmToggle",
    Callback = function(Value)
        autoFarmEnabled = Value
        if Value then
            if not currentTargetBaseName then
                Rayfield:Notify({Title = "Error", Content = "Select mob first!", Duration = 4})
                AutoFarmToggle:Set(false)
                return
            end
            Rayfield:Notify({Title = "ON", Content = "Farming " .. currentTargetBaseName, Duration = 4})
            if StatusLabel then StatusLabel:Set("Farming: " .. currentTargetBaseName) end
            startFarmLoop()
            teleportToMob(currentTargetBaseName)  -- Immediate first TP
        else
            if farmThread then task.cancel(farmThread) end
            Rayfield:Notify({Title = "OFF", Content = "Stopped", Duration = 3})
            if StatusLabel then StatusLabel:Set("Stopped") end
        end
    end,
})

-- Slider (your syntax correct)
local DelaySlider = Tab:CreateSlider({
    Name = "TP Delay (seconds)",
    Range = {1, 15},
    Increment = 0.5,
    Suffix = "s",
    CurrentValue = 4,
    Flag = "FarmDelay",
    Callback = function(Value)
        farmDelay = Value
        print("Delay set to", Value)
    end,
})

-- Test button
Tab:CreateButton({
    Name = "Teleport Once (Test)",
    Callback = function()
        if currentTargetBaseName then
            local ok = teleportToMob(currentTargetBaseName)
            Rayfield:Notify({
                Title = ok and "TP OK" or "TP Failed",
                Content = ok and "Check console/position" or "See warns",
                Duration = 4,
            })
        else
            Rayfield:Notify({Title = "No mob selected", Duration = 3})
        end
    end,
})

-- Refresh
Tab:CreateButton({
    Name = "Refresh List",
    Callback = function()
        Dropdown:Refresh(getBaseNames(), true)
    end,
})

Rayfield:LoadConfiguration()
print("Nomek Farmer Loaded - Use 'Teleport Once' to test first!")
