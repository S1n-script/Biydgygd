local Tab = Window:CreateTab("Auto Quest fixed", 4483362458) -- Title, Image

-- === ANIME DESTROYERS NAMEK FARMER - ALL MOBS OF TYPE (Random Cycle) ===
-- Paste AFTER Rayfield load + Window + Tab creation

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Auto-detect folder (Nomek / Namek etc.)
local nomekFolder = nil
local possiblePaths = {"MobSpawns.Nomek", "MobSpawns.Namek", "Mobs.Namek", "Enemies.Namek", "Worlds.Namek.Mobs"}
for _, path in ipairs(possiblePaths) do
    local folder = workspace
    for segment in path:gmatch("[^.]+") do
        folder = folder:FindFirstChild(segment)
        if not folder then break end
    end
    if folder and #folder:GetChildren() > 0 then
        nomekFolder = folder
        print("âœ… Using folder:", folder:GetFullName())
        break
    end
end

if not nomekFolder then
    Rayfield:Notify({Title = "Folder Not Found", Content = "Make sure you're in Namek world", Duration = 6})
    return
end

-- State
local autoFarmEnabled = false
local farmDelay = 5
local currentTargetBaseName = nil

-- Get clean dropdown options
local function getBaseNames()
    local set = {}
    for _, child in ipairs(nomekFolder:GetChildren()) do
        local clean = child.Name:gsub("_%d+$", ""):gsub(" %b()", ""):gsub("Clone", ""):match("^%s*(.-)%s*$")
        if clean and #clean > 1 then
            set[clean] = true
        end
    end
    local list = {}
    for name in pairs(set) do table.insert(list, name) end
    table.sort(list)
    return #list > 0 and list or {"No mobs found"}
end

-- NEW: Teleport to RANDOM mob of the selected type (hits ALL of them)
local function teleportToMob(baseName)
    if not baseName or baseName == "No mobs found" then return false end

    local matches = {}
    for _, child in ipairs(nomekFolder:GetChildren()) do
        if child.Name:lower():find(baseName:lower()) then
            table.insert(matches, child)
        end
    end

    if #matches == 0 then return false end

    -- Pick random one every time â†’ cycles through ALL spawns
    local target = matches[math.random(1, #matches)]

    local tpCFrame = target.CFrame * CFrame.new(math.random(-3,3), 7, -5)  -- slight random offset

    pcall(function()
        player.Character:PivotTo(tpCFrame)
    end)

    print("âœ… TP to", target.Name, "(", #matches, "total", baseName, "spawns)")
    return true
end

-- Farm loop
local farmThread
local function startFarmLoop()
    if farmThread then task.cancel(farmThread) end
    farmThread = task.spawn(function()
        while autoFarmEnabled do
            if currentTargetBaseName then
                teleportToMob(currentTargetBaseName)
            end
            task.wait(farmDelay)
        end
    end)
end

-- Respawn handler
player.CharacterAdded:Connect(function()
    task.wait(2)
    if autoFarmEnabled and currentTargetBaseName then
        teleportToMob(currentTargetBaseName)
    end
end)

-- === UI ===
local StatusLabel = Tab:CreateLabel("Status: Ready - Refresh if needed")

local Dropdown = Tab:CreateDropdown({
    Name = "Select Mob Type",
    Options = getBaseNames(),
    CurrentOption = {},
    MultipleOptions = false,
    Flag = "MobType",
    Callback = function(Option)
        currentTargetBaseName = Option[1]
        StatusLabel:Set("Selected: " .. (currentTargetBaseName or "None"))
    end,
})

local AutoFarmToggle = Tab:CreateToggle({
    Name = "Auto Farm / TP Loop",
    CurrentValue = false,
    Flag = "AutoFarm",
    Callback = function(Value)
        autoFarmEnabled = Value
        if Value then
            if not currentTargetBaseName then
                Rayfield:Notify({Title = "Select a mob first!", Duration = 4})
                AutoFarmToggle:Set(false)
                return
            end
            StatusLabel:Set("FARMING ALL " .. currentTargetBaseName .. "s")
            Rayfield:Notify({Title = "Farm ON", Content = "Hitting every " .. currentTargetBaseName, Duration = 4})
            teleportToMob(currentTargetBaseName)
            startFarmLoop()
        else
            if farmThread then task.cancel(farmThread) end
            StatusLabel:Set("Farm Stopped")
            Rayfield:Notify({Title = "Farm OFF", Duration = 3})
        end
    end,
})

local DelaySlider = Tab:CreateSlider({
    Name = "TP Delay",
    Range = {1, 20},
    Increment = 0.5,
    Suffix = "s",
    CurrentValue = 5,
    Flag = "FarmDelay",
    Callback = function(Value) farmDelay = Value end,
})

Tab:CreateButton({
    Name = "TP Once (Test)",
    Callback = function()
        if currentTargetBaseName then
            teleportToMob(currentTargetBaseName)
            Rayfield:Notify({Title = "TP Sent!", Duration = 2})
        else
            Rayfield:Notify({Title = "Select a mob first", Duration = 3})
        end
    end,
})

Tab:CreateButton({
    Name = "Refresh Mob List",
    Callback = function()
        local opts = getBaseNames()
        Dropdown:Refresh(opts, true)
        StatusLabel:Set(#opts .. " types loaded")
        Rayfield:Notify({Title = "Refreshed", Duration = 3})
    end,
})

Rayfield:LoadConfiguration()
print("=== Namek Farmer - ALL MOBS MODE ACTIVE ===")

