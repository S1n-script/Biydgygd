local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Rayfield Example Window",
   Icon = 0,
   LoadingTitle = "Rayfield Interface Suite",
   LoadingSubtitle = "by Sirius",
   ShowText = "Rayfield",
   Theme = "Default",

   ToggleUIKeybind = "K",

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },

   KeySystem = false,
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"Hello"}
   }
})

local Tab = Window:CreateTab("Tab Example", 4483362458) -- Title, Image

local autoThrow = false

local Toggle = Tab:CreateToggle({
   Name = "AutoThrow",
   CurrentValue = false,
   Flag = "AutoThrowToggle",
   
   Callback = function(Value)
      autoThrow = Value   -- sync with the actual toggle state (true/false)

      if Value then
         -- Run the loop in a separate thread so it doesn't freeze the game
         task.spawn(function()
            while autoThrow do
               local args = {
                  "City"
               }
               
               -- Safe remote firing with timeout + error protection
               pcall(function()
                  game:GetService("ReplicatedStorage")
                     :WaitForChild("Remotes", 8)
                     :WaitForChild("Throw", 5)
                     :FireServer(unpack(args))
               end)
               
               task.wait(0.08)   -- ≈ 12 throws/sec — adjust this:
                                 -- 0.05 = faster   /   0.15 = slower & safer
            end
         end)
      end
      -- When toggle turned OFF → autoThrow = false → loop stops automatically
   end,
})

local autoRebirth = false

local Toggle = Tab:CreateToggle({
   Name = "Auto Rebirth (Smart Detect)",
   CurrentValue = false,
   Flag = "AutoRebirthToggle",
   
   Callback = function(Value)
      autoRebirth = Value
      
      if Value then
         task.spawn(function()
            while autoRebirth do
               -- Option 1: Fast check using leaderstats (most common & fastest)
               local leaderstats = game.Players.LocalPlayer:WaitForChild("leaderstats", 5)
               if leaderstats then
                  local rebirths = leaderstats:FindFirstChild("Rebirths") or leaderstats:FindFirstChild("Rebirth")
                  local mainStat   -- change this to your currency name!
                  
                  -- Pick ONE of these based on your game:
                  --mainStat = leaderstats:FindFirstChild("Coins")     -- common
                   mainStat = leaderstats:FindFirstChild("Cash")
                  -- mainStat = leaderstats:FindFirstChild("Strength")
                  -- mainStat = leaderstats:FindFirstChild("Clicks")
                  
                  if mainStat and rebirths then
                     local current = mainStat.Value
                     local rebirthsCount = rebirths.Value
                     
                     -- Typical rebirth cost formula (adjust this!)
                     local cost = 1000 * (rebirthsCount + 1)          -- example: 1k, 2k, 3k...
                     -- or: local cost = 10^(rebirthsCount + 3)       -- exponential
                     -- or: local cost = 5000 + rebirthsCount * 2500
                     
                     if current >= cost then
                        -- We can rebirth → fire once
                        pcall(function()
                           game:GetService("ReplicatedStorage")
                              :WaitForChild("Remotes")
                              :WaitForChild("Rebirth")
                              :FireServer()
                        end)
                        task.wait(0.5)   -- small delay after success to let stats reset
                     end
                  end
               end
               
               task.wait(1.2)   -- check every ~1.2 seconds (adjust: 0.6 = faster, 3 = stealthier)
            end
         end)
      end
   end,
})
