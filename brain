-- Load Rayfield (working link as of 2026)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the main window
local Window = Rayfield:CreateWindow({
    Name = "HM Hub",
    LoadingTitle = "LOADING HM HUB...",
    LoadingSubtitle = "By Tha Hollows",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "HMhub",
        FileName = "Config"
    },
    KeySystem = false,
})

-- Main tab
local MainTab = Window:CreateTab("Main", 4483362458)

-- Variables
local autoClick = false
local autoStat = false
local selectedStat = "Energy"  -- Default

-- =====================================
-- AUTO CLICKER
-- =====================================
local ClickToggle = MainTab:CreateToggle({
    Name = "Auto Clicker",
    CurrentValue = false,
    Flag = "AutoClickToggle",
    
    Callback = function(Value)
        autoClick = Value
        
        if Value then
            Rayfield:Notify({
                Title = "Auto Clicker",
                Content = "Clicking every ~0.03s...",
                Duration = 3
            })
            
            task.spawn(function()
                while autoClick do
                    pcall(function()
                        local clickRemote = game:GetService("ReplicatedStorage")
                            :WaitForChild("Packages")
                            :WaitForChild("_Index")
                            :WaitForChild("sleitnick_knit@1.5.1")
                            :WaitForChild("knit")
                            :WaitForChild("Services")
                            :WaitForChild("ClickService")
                            :WaitForChild("RF")
                            :WaitForChild("Click")
                        
                        clickRemote:InvokeServer()
                    end)
                    
                    task.wait(0.5)  -- Increase to 0.1 if you get kicked
                end
            end)
        end
    end,
})

-- =========================
-- AUTO TITLE VARIABLES
-- =========================
local autoTitle = false

local titleList = {
    "Adept", "Apprentice", "Amateur", "Trainee", "Novice",
    "Recruit", "Challanger", "Combatant", "Competitor", "Fighter",
    "Commander", "Warrior", "Elite Warrior", "Master"
}

-- =========================
-- SERVICES
-- =========================
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- =========================
-- TITLE BUY REMOTE
-- =========================
local titleRemote = ReplicatedStorage
    :WaitForChild("Packages")
    :WaitForChild("_Index")
    :WaitForChild("sleitnick_knit@1.5.1")
    :WaitForChild("knit")
    :WaitForChild("Services")
    :WaitForChild("TitleService")
    :WaitForChild("RF")
    :WaitForChild("Buy")

-- =========================
-- PLAYER DATA (CHANGE CURRENCY NAME IF NEEDED)
-- =========================
local function getCurrency()
    local stats = player:FindFirstChild("leaderstats") or player:FindFirstChild("Stats")
    if not stats then return nil end

    return stats:FindFirstChild("Gems")      -- ðŸ”´ CHANGE IF NEEDED
        or stats:FindFirstChild("Coins")
        or stats:FindFirstChild("Gold")
end

-- =========================
-- GET CURRENT TITLE INDEX
-- =========================
local function getCurrentTitleIndex()
    local titleValue = player:FindFirstChild("Title")
    if not titleValue then return 0 end

    for i, name in ipairs(titleList) do
        if name == titleValue.Value then
            return i
        end
    end

    return 0
end

-- =========================
-- ATTEMPT NEXT TITLE
-- =========================
local function tryBuyNextTitle()
    local currentIndex = getCurrentTitleIndex()
    local nextTitle = titleList[currentIndex + 1]
    if not nextTitle then return end

    pcall(function()
        titleRemote:InvokeServer(nextTitle)
    end)
end

-- =========================
-- AUTO TITLE TOGGLE
-- =========================
MainTab:CreateToggle({
    Name = "Auto Buy Titles (Smart)",
    CurrentValue = false,
    Flag = "AutoTitleToggle",

    Callback = function(Value)
        autoTitle = Value

        if not Value then return end

        Rayfield:Notify({
            Title = "Auto Titles",
            Content = "Waiting for eligibility...",
            Duration = 4
        })

        local currency = getCurrency()
        if not currency then
            warn("Currency stat not found")
            return
        end

        -- ðŸ”¥ EVENT-DRIVEN (NO SPAM)
        task.spawn(function()
            while autoTitle do
                local before = getCurrentTitleIndex()
                tryBuyNextTitle()
                task.wait(1.5)

                local after = getCurrentTitleIndex()
                if after > before then
                    Rayfield:Notify({
                        Title = "Title Upgraded",
                        Content = "New title unlocked!",
                        Duration = 3
                    })
                end

                task.wait(2)
            end
        end)
    end
})


-- =========================
-- AUTO RANK UP VARIABLES
-- =========================
local autoRankup = false

-- =========================
-- SERVICES
-- =========================
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- =========================
-- RANK UP REMOTE
-- =========================
local rankUpRemote = ReplicatedStorage
    :WaitForChild("Packages")
    :WaitForChild("_Index")
    :WaitForChild("sleitnick_knit@1.5.1")
    :WaitForChild("knit")
    :WaitForChild("Services")
    :WaitForChild("RankupService")
    :WaitForChild("RF")
    :WaitForChild("RankUp")

-- =========================
-- GET PLAYER RANK VALUE
-- (change names here if needed)
-- =========================
local function getRankValue()
    return player:FindFirstChild("Rank")
        or (player:FindFirstChild("leaderstats") and player.leaderstats:FindFirstChild("Rank"))
        or (player:FindFirstChild("Stats") and player.Stats:FindFirstChild("Rank"))
end

-- =========================
-- ATTEMPT RANK UP (SAFE)
-- =========================
local function tryRankUp()
    pcall(function()
        rankUpRemote:InvokeServer()
    end)
end

-- =========================
-- AUTO RANK UP TOGGLE
-- =========================
MainTab:CreateToggle({
    Name = "Auto Rank Up (Smart)",
    CurrentValue = false,
    Flag = "AutoRankUpToggle",

    Callback = function(Value)
        autoRankup = Value
        if not Value then return end

        Rayfield:Notify({
            Title = "Auto Rank Up",
            Content = "Waiting for eligibility...",
            Duration = 4
        })

        local rankValue = getRankValue()
        if not rankValue then
            warn("Rank value not found")
            return
        end

        task.spawn(function()
            while autoRankup do
                local before = rankValue.Value

                -- Attempt rank up ONCE
                tryRankUp()
                task.wait(1.5)

                local after = rankValue.Value

                -- Rank successfully increased
                if after ~= before then
                    Rayfield:Notify({
                        Title = "Rank Up",
                        Content = "Rank increased!",
                        Duration = 3
                    })
                end

                -- Slow retry (safe)
                task.wait(3)
            end
        end)
    end
})

local dailyReward = false

local Toggle = MainTab:CreateToggle({  -- Use 'MainTab' from your full script
    Name = "Auto Claim Daily Rewards",
    CurrentValue = false,
    Flag = "DailyRewardToggle",
    
    Callback = function(Value)
        dailyReward = Value
        
        if Value then
            Rayfield:Notify({
                Title = "Daily Rewards",
                Content = "Auto-claiming rewards 1â€“9 ...",
                Duration = 4
            })
            
            task.spawn(function()
                local remote = game:GetService("ReplicatedStorage")
                    :WaitForChild("Packages")
                    :WaitForChild("_Index")
                    :WaitForChild("sleitnick_knit@1.5.1")
                    :WaitForChild("knit")
                    :WaitForChild("Services")
                    :WaitForChild("GiftService")
                    :WaitForChild("RF")
                    :WaitForChild("ClaimReward")
                
                local rewardIDs = {1, 2, 3, 4, 5, 6, 7, 8, 9}  -- All 1-9 in order
                
                while dailyReward do
                    local success, err = pcall(function()
                        for _, id in ipairs(rewardIDs) do
                            if not dailyReward then break end  -- Stop mid-cycle
                            
                            remote:InvokeServer(id)
                            task.wait(0.2)  -- Delay per reward (anti-spam)
                        end
                    end)
                    
                    if not success then
                        warn("Daily claim error: " .. tostring(err))
                    end
                    
                    task.wait(600)  -- Delay between full cycles (1-9) â€“ prevents kick
                end
            end)
        end
    end,
})

local autoReroll = false
local selectedReroll = "Saiyan"  -- Default
local consecutiveErrors = 0  -- Track errors for auto-stop on "out of currency"

-- Dropdown to select reroll type
local RerollDropdown = MainTab:CreateDropdown({
    Name = "Select Reroll Type",
    Options = {"Saiyan", "Dragon", "Jinchuriki", "Chakra"},  -- Add more if needed ("Namek", etc.)
    CurrentOption = {"Saiyan"},
    MultipleOptions = false,
    Flag = "RerollTypeFlag",
    
    Callback = function(Option)
        selectedReroll = Option[1]
        Rayfield:Notify({
            Title = "Reroll Type",
            Content = "Selected: " .. selectedReroll .. " (toggle to auto-farm secret)",
            Duration = 3
        })
    end,
})

-- Toggle for auto-reroll until secret or out of currency
local RerollToggle = MainTab:CreateToggle({
    Name = "Auto Reroll",
    CurrentValue = false,
    Flag = "AutoRerollToggle",
    
    Callback = function(Value)
        autoReroll = Value
        consecutiveErrors = 0  -- Reset error counter
        
        if Value then
            if not selectedReroll then
                Rayfield:Notify({
                    Title = "Error",
                    Content = "Select a reroll type first!",
                    Duration = 4
                })
                autoReroll = false
                return
            end
            
            Rayfield:Notify({
                Title = "Auto Reroll",
                Content = "Farming " .. selectedReroll .. " until SECRET or no currency...",
                Duration = 5
            })
            
            task.spawn(function()
                local remote = game:GetService("ReplicatedStorage")
                    :WaitForChild("Packages")
                    :WaitForChild("_Index")
                    :WaitForChild("sleitnick_knit@1.5.1")
                    :WaitForChild("knit")
                    :WaitForChild("Services")
                    :WaitForChild("RerollableService")
                    :WaitForChild("RF")
                    :WaitForChild("Reroll")
                
                while autoReroll do
                    local success, result = pcall(function()
                        return remote:InvokeServer(selectedReroll)
                    end)
                    
                    if success then
                        -- Check for "secret" rarity (adapt based on actual return format)
                        -- Assume return is table like {rarity = "secret", ...} or string
                        local rarity = ""
                        if typeof(result) == "table" and result.rarity then
                            rarity = result.rarity:lower()
                        elseif typeof(result) == "string" then
                            rarity = result:lower()
                        end
                        
                        if rarity:find("secret") then
                            Rayfield:Notify({
                                Title = "SECRET GOT!",
                                Content = "Secret rarity on " .. selectedReroll .. "! Stopping...",
                                Duration = 10,
                                Image = "rbxassetid://4483345998"  -- Checkmark
                            })
                            autoReroll = false
                            break
                        end
                        
                        Rayfield:Notify({
                            Title = "Rerolled",
                            Content = "Got: " .. (rarity ~= "" and rarity or "Common") .. " | Continuing...",
                            Duration = 2
                        })
                        
                        consecutiveErrors = 0  -- Reset on success
                    else
                        consecutiveErrors += 1
                        warn("Reroll error (" .. consecutiveErrors .. "): " .. tostring(result))
                        
                        -- Auto-stop after 3 consecutive errors (likely out of currency)
                        if consecutiveErrors >= 3 then
                            Rayfield:Notify({
                                Title = "Out of Currency?",
                                Content = "Too many errors â€“ likely out of currency. Stopped.",
                                Duration = 6
                            })
                            autoReroll = false
                            break
                        end
                    end
                    
                    task.wait(1.2)  -- Safe delay (adjust 0.8â€“2s to avoid kick)
                end
            end)
        else
            Rayfield:Notify({
                Title = "Auto Reroll",
                Content = "Stopped.",
                Duration = 3
            })
        end
    end,
})

